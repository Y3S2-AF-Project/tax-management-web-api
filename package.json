{
  "name": "bashaway-backend",
  "version": "1.0.0",
  "description": "Backend",
  "main": "src/app.js",
  "scripts": {
    "build": "npm run clean && npm run build-babel && npm run copy",
    "build-babel": "babel -d ./dist ./src -s",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "babel src --out-dir ./dist --copy-files",
    "dev": "nodemon --exec babel-node src/app.js",
    "start": "node dist/app.js",
    "lint": "eslint --ignore-path .gitignore && prettier . --write",
    "test": "echo test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Y3S2-AF-Project/tax-management-web-be.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "celebrate": "^15.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "handlebars": "^4.7.7",
    "helmet": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "migrate-mongo": "^9.0.0",
    "mongoose": "^6.10.5",
    "mongoose-aggregate-paginate-v2": "^1.0.6",
    "mongoose-paginate-v2": "^1.7.1",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.22",
    "uuid": "^8.3.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.17.12",
    "@babel/eslint-parser": "7.18.2",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.21.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "husky": "^4.3.8",
    "prettier": "^2.8.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && git add ."
    }
  }
}
